{
    "routes": [
        {
            "id": "control",
            "type": "PROXY",
            "endpoint": "{{.MockserverEndpoint}}/control",
            "timeout": "5s"
        }
    ],
    "experiment_engine": {
        "type": "nop"
    },
    "resource_request": {
        "min_replica": 1,
        "max_replica": 1,
        "cpu_request": "200m",
        "memory_request": "250Mi"
    },
    "autoscaling_policy": {
        "metric": "rps",
        "target": "100"
    },
    "timeout": "5s",
    "log_config": {
        "result_logger_type": "nop"
    },
    "enricher": {
        "image": "{{.TestEchoImage}}",
        "resource_request": {
            "min_replica": 1,
            "max_replica": 1,
            "cpu_request": "10",
            "memory_request": "1Gi"
        },
        "autoscaling_policy": {
            "metric": "cpu",
            "target": "80"
        },
        "endpoint": "anything",
        "timeout": "2s",
        "port": 80,
        "env": [
            {
                "name": "TEST_ENV",
                "value": "enricher"
            }
        ]
    },
    "ensembler": {
        "type": "docker",
        "docker_config": {
            "image": "{{.TestEchoImage}}",
            "resource_request": {
                "min_replica": 2,
                "max_replica": 2,
                "cpu_request": "200m",
                "memory_request": "256Mi"
            },
            "autoscaling_policy": {
                "metric": "memory",
                "target": "220"
            },
            "endpoint": "anything",
            "timeout": "3s",
            "port": 80,
            "env": [
                {
                    "name": "TEST_ENV",
                    "value": "ensembler"
                }
            ]
        }
    }
}
