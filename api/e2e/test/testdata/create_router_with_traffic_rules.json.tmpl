{
    "environment_name": "dev",
    "name": "e2e-traffic-rules-{{ .TestID }}",
    "config": {
        "routes": [
            {
                "id": "control",
                "type": "PROXY",
                "endpoint": "{{ .Mockserver.Endpoint }}/control",
                "timeout": "5s"
            },
            {
                "id": "treatment-a",
                "type": "PROXY",
                "endpoint": "{{ .Mockserver.Endpoint }}/treatment-a",
                "timeout": "5s"
            },
            {
                "id": "treatment-b",
                "type": "PROXY",
                "endpoint": "{{ .Mockserver.Endpoint }}/treatment-b",
                "timeout": "5s"
            }
        ],
        "default_traffic_rule": {
            "routes": ["control"]
        },
        "rules": [
            {
                "name": "rule-1",
                "conditions": [
                    {
                        "field_source": "header",
                        "field": "X-Region",
                        "operator": "in",
                        "values": ["region-a"]
                    }
                ],
                "routes": ["treatment-a"]
            },
            {
                "name": "rule-2",
                "conditions": [
                    {
                        "field_source": "payload",
                        "field": "service_type.id",
                        "operator": "in",
                        "values": ["service-type-b"]
                    }
                ],
                "routes": ["treatment-b"]
            }
        ],
        "experiment_engine": {
            "type": "nop"
        },
        "resource_request": {
            "min_replica": 1,
            "max_replica": 1,
            "cpu_request": "100m",
            "memory_request": "250Mi"
        },
        "autoscaling_policy": {
            "metric": "concurrency",
            "target": "1"
        },
        "timeout": "5s",
        "protocol": "HTTP_JSON",
        "log_config": {
            "result_logger_type": "nop"
        },
        "ensembler": {
            "type": "docker",
            "docker_config": {
                "image": "{{ .Echoserver.Image }}",
                "resource_request": {
                    "min_replica": 2,
                    "max_replica": 2,
                    "cpu_request": "250m",
                    "memory_request": "256Mi"
                },
                "autoscaling_policy": {
                    "metric": "concurrency",
                    "target": "1"
                },
                "endpoint": "ensemble",
                "timeout": "3s",
                "port": 80,
                "env": [
                    {
                        "name": "TEST_ENV",
                        "value": "ensembler"
                    }
                ]
            }
        }
    }
}
